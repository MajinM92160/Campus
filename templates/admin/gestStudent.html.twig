<body>
{# ================ MESSAGES FLASH =======================#}
        
    {% for message in app.flashes('success') %}
    <div class="alert alert-success text-center">
        {{ message }}
    </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
    <div class="alert alert-danger text-center">
        {{ message }}
    </div>
{% endfor %}



